<Context>
    <Resource name="jdbc/URDB"
              auth="Container"
              type="javax.sql.DataSource"
              testOnReturn="false"
              validationQuery="SELECT 1"
              timeBetweenEvictionRunsMillis="30000"
              maxTotal="1000"
              minIdle="10"
              maxWaitMillis="10000"
              initialSize="10"
              removeAbandonedOnMaintenance="true"
              minEvictableIdleTimeMillis="30000"
              username="${db.username}"
              password="${db.password}"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://${db.host}:${db.port}/${db.name}?useUnicode=yes&amp;characterEncoding=UTF-8&amp;useSSL=false&amp;serverTimezone=UTC"/>
</Context>
